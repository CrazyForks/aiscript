path {
    id: int
}

get / -> schema.UserInfo {
    return model.User.get_by_id(id)
}

put / {
    @json
    body {
        nickname: str
        avatar: str
        bio: str
    }

    model.User.update(nickname, avatar, bio)
    return 200, "ok"
}

post /follows {
    model.Follow.create(id, follow_id)
    return 200, "ok"
}

delete /follows {
    model.Follow.delete(id, follow_id)
    return 200, "ok"
}