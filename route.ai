route /poc {
    get /hello {
        query {
            @string(min_len=3, max_len=10)
            content: str
            age: int = 18
        }

        let name = "aiscript";
        print name;
        return "get: hello" + name;
    }

    post /hello {
        query {
            @string(min_len=3, max_len=30)
            content: str
            age: int = 18
            @in(["ios", "android"])
            platform: str = "ios" 
        }

        @json
        body {
            test: bool = true
        }

        let answer = prompt content;
        return "AI answer: " + answer;
    }
}